{
  "name": "stockfish-api",
  "version": "1.0.0",
  "description": "Chess analysis API with Stockfish integration",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "node ./node_modules/typescript/bin/tsc --noEmit",
    "validate": "pnpm lint && pnpm typecheck",
    "prebuild": "pnpm validate",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest --coverage",
    "test:e2e": "playwright test",
    "data:download": "node scripts/download-chesscom-games.mjs",
    "data:import": "npx tsx scripts/import-file-to-db.ts",
    "data:analyze": "npx tsx scripts/run-engine-analysis.ts",
    "data:summarize": "npx tsx scripts/rebuild-all-summaries.ts",
    "import-games": "npx tsx scripts/import-all.ts",
    "rebuild:progression": "npx tsx scripts/rebuild-progression.ts",
    "engine:analyze": "npx tsx scripts/run-engine-analysis.ts",
    "engine:progress": "npx tsx scripts/engine-coverage.ts",
    "engine:worker": "npx tsx scripts/engine-worker.ts",
    "embeddings:backfill": "npx tsx scripts/backfill-embeddings.ts",
    "embeddings:test": "npx tsx scripts/test-embedding.ts",
    "rebuild:engine-summary": "npx tsx scripts/rebuild-engine-summary.ts",
    "migrate:analysis-blunders": "npx tsx scripts/migrate-analysis-blunders.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "chess.js": "^1.0.0-beta.8",
    "dotenv": "^17.2.3",
    "next": "^14.2.0",
    "openai": "^4.47.0",
    "react": "^18.3.0",
    "react-chessboard": "^4.7.3",
    "react-dom": "^18.3.0",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  }
}
