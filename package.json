{
  "name": "stockfish-api",
  "version": "1.0.0",
  "description": "Chess analysis API with Stockfish integration",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck",
    "prebuild": "npm run validate",
    "import-games": "npx tsx scripts/import-all.ts",
    "rebuild:progression": "npx tsx scripts/rebuild-progression.ts",
    "engine:analyze": "npx tsx scripts/run-engine-analysis.ts",
    "rebuild:engine-summary": "npx tsx scripts/rebuild-engine-summary.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "chess.js": "^1.0.0-beta.8",
    "dotenv": "^17.2.3",
    "next": "^14.2.0",
    "openai": "^4.47.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
